<%= render partial: "layouts/header" %>
<div class="main">
  <%= render partial: "layouts/side-bar" %>
  <div class="contents">
    <div class="calendar">
      <%= month_calendar do |date| %>
        <%= date.day %>
      <% end %>
    </div>
    <div class="spend-input">
      <div class="spend-form-text">支出を入力</div>
      <div class="spend-input-form">
        <label for="spand-date">日付</label>
        <input type="date" class="spend-date-input-form" id="spend-date" name="spend-date">
        <label for="spend-money">金額</label>
        <input type="text" class="spend-money-input-form" id="spend-money" name="spend-money" placeholder="money">
        <label for="spend-category">カテゴリー</label>
        <input type="text" class="spend-category-input-form" id="spend-category" name="spend-category">
        <label for="spend-memo">メモ</label>
        <textarea class="spend-memo-input-form" id="spend-memo" name="spend-memo" row="10"></textarea>
      </div>
    </div>
  </div>
</div>