<%= render partial: 'layouts/header' %>
<div class="main">
  <%= render partial: 'layouts/side-bar' %>
  <div class="conteiner">
    <div class="category-month">
      <div class="category-arrow">◀︎</div>
      2022年 4月
      <div class="category-arrow">▶︎</div>
    </div>
    <div class="category-spend-sum">
      合計出費額：<%= @sum %>円
    </div>
    <div class="categories">
      <div class="category-list">
        <% @categories.each_with_index do |category, index| %>
          <div class="category-box">
            <div class="category-box-header">
              <div class="category-name">
                <%= category.title %>
              </div>
              <div class="category-btns">
                <div class="category-btn">
                  <a class="btn" href="#">詳細</a>
                </div>
                <div class="category-btn">
                  <a class="btn" href="#">削除</a>
                </div>
              </div>
            </div>
            <div class="category-box-footer">
              <div class="category-bar" >
                <span class="percentage" style="display: none;"><%= @each_props[index] %></span>
                <div class="category-money-sum">
                  <%= @each_sums[index] %>円
                </div>
              </div>
            </div>
            <div class="percentage-values">
              <p>0</p>
              <p>50</p>
              <p>100 (%)</p>
            </div>
          </div>
        <% end %>
      </div>
      <div class="new-category">
        <div class="new-category-box-header">
          <div class="new-category-name">
            新規カテゴリー
          </div>
        </div>
        <div class="new-category-box-footer">
          <input type="text" class="category-name-form" placeholder="カテゴリ名を入力（10文字以内）">
          <input type="text" class="category-color-form" placeholder="カテゴリの色を選択">
        </div>
        <div class="category-input">
          <div class="category-input-btn">
            カテゴリーを追加する
          </div>
        </div>
      </div>
    </div>
  </div>
</div>