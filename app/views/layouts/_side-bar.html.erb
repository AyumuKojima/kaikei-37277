<div class="side-bar">
  <div class="side-btns">
    <%= link_to year_month_spends_path(@year, @month), class: "side-btn" do %>
      <%= image_tag 'calendar.png', class: "size1" %>
      支出を入力
    <% end %>

    <%= link_to year_month_categories_path(@year, @month), class: "side-btn" do %>
      <%= image_tag 'category.png', class: "size2" %>
      カテゴリー
    <% end %>


    <a class="side-btn" href="#">
      <%= image_tag 'fix.png', class: "size3" %>
      固定費
    </a>

  </div>
  <div class="user-btns">
    <div class="user-btn">
      <a class="setting-btn" href="#">
        <span><%= image_tag 'setting.png', size: '40x40' %></span>
      </a>
    </div>
    <div class="user-btn">
      <span id="user-btn"><%= image_tag 'user.png', size: '40x40', id: "user-btn" %></span>
      <div class="user" id="user">
        <div class="user-info">
          <div class="info-box">
            <div class="info-name">
              nickname:
            </div>
            <div class="user-name">
              <%= current_user.nickname %>
            </div>
          </div>
          <div class="info-box">
            <div class="info-name">
              email:
            </div>
            <div class="user-email">
              <%= current_user.email %>
            </div>
          </div>
        </div>
        <div class="sign-out-btn">
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "user-sign-out-btn" %>
        </div>
      </div>
    </div>
  </div>
</div>