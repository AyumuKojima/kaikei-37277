<div class="log-in-main centering">
  <div class="log-in-contents">
    <div class="log-in-left">
      <span class="log-in-logo">Log in</span>
      <div class="log-in-btns">
        <p>or</p>
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "新規登録", new_registration_path(resource_name), class: "sign-up-btn centering" %><br />
        <% end %>
      </div>
    </div>
    <div class="log-in-right">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="log-in-fields">
          <div class="field">
            <%= f.label :email, class: "label" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "email-field" %>
          </div>

          <div class="field">
            <%= f.label :password, class: "label" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "password-field" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
        </div>

        <div class="actions centering">
          <%= f.submit "Log in", class: "log-in-submit centering" %>
        </div>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "forget-password" %><br />
        <% end %>
      <% end %>
    </div>
  </div>
</div>
